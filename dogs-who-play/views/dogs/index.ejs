<!DOCTYPE html>
<html>
<head>
  <title>DOGS WHO PLAY</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="stylesheets/style.css" />
</head>
<body>


  <nav class="navbar">
      <ul>
        <li>
          <a id="main" href="#">DOGS WHO PLAY</a>
        </li>
        <li>
          <a class="nav-link" href="#">CREATE AN EVENT</a>
        </li>
        <li>
          <a class="nav-link" href="#">MY EVENTS</a>
        </li>
        <li>
          <a class="nav-link" href="#">FRIENDS</a>
        </li>
        <li>
          <a class="nav-link" href="#">MY PROFILE</a>
        </li>
      </ul>
      <form>
        <ul>
          <li>
          <% if (user) { %>
            <a class = 'google' href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
          <% } else { %>
            <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
          <% } %>
          </li>
        </ul>
      </form>
  </nav>



  <div class="container">
    <div id="search-row" class="row">
      <form action="/dogs" method="GET">
        <div class="col s3 offset-s3">
          <!-- search -->
          <div class="input-field">
            <input id="search" type="search" name="name" placeholder="search name" value="<%= name %>" autocomplete="off">
          </div>
        </div>
        <div class="col s2">
        </div>
      </form>
    </div>
    <div class="row">
      <div id="dogs" class="col s12">
        <% dogs.forEach(function(dog) { %>
              <div class = 'profile'>
                  <i class="small material-icons">perm_identity</i>
                  <span class="dog-name"><%= dog.name %></span>
              </div>
                <div class="card-action"></div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>

</html>