<%- include('../partials/header') %>

<h1 class = 'myevents'>My Events</h1>
<hr>
<form action ='/events' method='POST'></form>
  <table class = 'eventtable' width ='600px'>
    <thead class = 'headtable'>
      <tr>
        <th name ='Event Name'  class = 'headtable' width = '200px'>Event Name</th>
        <th name ='Event Location'  class = 'headtable' width = '200px'>Event Location</th>
        <th name ='Date' class = 'headtable' width = '500px'>Date</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% dog.events.forEach(function(e){%>
        <tr>
          <td><%= e.eventName %></td>
          <td><%= e.eventLocation %></td>
          <td><%= e.dateOfEvent %></td>
          <td><button class = 'detailsbutton'><a href = '/events/<%=e._id%>'>Details</a></button></td>
        </tr>
    <%});%>
    </tbody>
  </table>
</form>



<%- include('../partials/footer') %>